# Starter pipeline
# Created by Bourman
# Start with a minimal pipeline that you can customize to build and deploy your code.
# Add steps that build, run tests, deploy, and more:
# https://aka.ms/yaml

trigger: none

pool:
  vmImage: ubuntu-latest

#Stage 1 - SQL Backup 
parameters:
- name: 'layer'
  values: 
    - HGS_CIS_PROD
stages:
  - stage: SQL_Backup
    displayName: SQL_Backup
    condition: always()
    jobs:
      - job: SQL_Backup
        displayName: 'SQL_Backup'
      - deployment: SQL_Backup_TO_BLOB
        environment:
         name: hgsid-prd
         resourceType: VirtualMachine
        strategy:
         runOnce:
           deploy:
            steps:
              - script: sqlcmd -s hgs-prd-dbls -U $(db_username) -P $(db_password) -i "F:\DB_SQL_Backup_Script\${{ parameters.layer }}_BackupScript.sql"
              - powershell: net use \\mgsiditdbchanges.file.core.windows.net\idit /USER:`"Azure\mgsiditdbchanges`" $(share_password)
              - powershell: Copy-Item -Path "\\mgsiditdbchanges.file.core.windows.net\idit\HGS\develop\DBChanges\$(image_version)" -Destination "F:\DB_Changes\" -Force -Recurse
###################################################################
#Stage 2 - Install DB
  - stage: DB_Change
    displayName: 'DB_Change'
    # condition: always()
    jobs:
      - job: db_changes
        displayName: db_changes
      - deployment: VMDeploy
        displayName: Deploy to VM
        environment:
          name: hgsid-prd
          resourceType: VirtualMachine
        strategy:
          runOnce:
              deploy:
                steps:
                  - script: hostname && cd "$(IDIT_PM)" && dbcp.cli.cmd db.type-names Oracle,DB2,MSSQL db.types.selected 2 db.username $(db_username) db.password $(db_password) db.url jdbc:jtds:sqlserver://$(Server_IP):1433;DatabaseName=${{ parameters.layer }};Instance= filename "F:\DB_Changes\$(image_version)"
